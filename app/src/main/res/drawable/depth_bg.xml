<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--background to compensate the transparency under shadow and glow (for bigger depth values)-->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <solid android:color="#1d1d1d" />
        </shape>
    </item>

    <!--top, dark, inner shadow-->
    <item
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <solid android:color="#3A3A3A" />
        </shape>
    </item>

    <!--bottom, light, outer glow-->
    <item
        android:top="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <solid android:color="#393939" />
        </shape>
    </item>

    <!--your color-->
    <item
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="40dp" />
            <solid android:color="#3C3C3C" />
        </shape>
    </item>
</layer-list>