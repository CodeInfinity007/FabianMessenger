<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/default_dp_chatto"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:foregroundGravity="center"
        android:src="@drawable/def_dp"
        app:layout_constraintBottom_toTopOf="@+id/name_chatlog_action"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_chatlog_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Name"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/default_dp_chatto"
        app:layout_constraintStart_toStartOf="@+id/default_dp_chatto"
        app:layout_constraintTop_toBottomOf="@id/default_dp_chatto"
        app:layout_constraintVertical_bias="0.063" />

    <ImageButton
        android:id="@+id/call_chatlog"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:background="#1d1d1d"
        android:src="@drawable/ic_call"
        app:layout_constraintBottom_toBottomOf="@+id/default_dp_chatto"
        app:layout_constraintEnd_toStartOf="@+id/videocall_chatlog"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toEndOf="@+id/default_dp_chatto"
        app:layout_constraintTop_toTopOf="@+id/default_dp_chatto" />

    <ImageButton
        android:id="@+id/videocall_chatlog"
        android:layout_width="24dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="#1d1d1d"
        android:src="@drawable/ic_videocall"
        app:layout_constraintBottom_toBottomOf="@+id/call_chatlog"
        app:layout_constraintEnd_toStartOf="@+id/info_chatlog"
        app:layout_constraintStart_toEndOf="@+id/call_chatlog"
        app:layout_constraintTop_toTopOf="@+id/call_chatlog"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/info_chatlog"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:background="#1d1d1d"
        android:src="@drawable/ic_info"
        app:layout_constraintBottom_toBottomOf="@+id/videocall_chatlog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/videocall_chatlog"
        app:layout_constraintTop_toTopOf="@+id/videocall_chatlog"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>


